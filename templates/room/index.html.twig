{% extends 'base.html.twig' %}

{% block title %}Rooms{% endblock %}

{% block body %}
    <h1>Rooms</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                {% if is_granted("ROLE_ADMIN")%}
                <th>actions</th>
                {% elseif is_granted("ROLE_CUSTOMER") %}
                <th></th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.name }}</td>
                <td>{{ room.description }}</td>
                <td><img src={{ vich_uploader_asset(room, 'imageFile') }} width="300px" height="200px"></td>
                {% if is_granted("ROLE_ADMIN")%}
                <td>
                    <a style="margin-right: 10px" class="btn btn-primary" href="{{ path('room_show', {'id': room.id}) }}">show</a>
                    <a class="btn btn-secondary" href="{{ path('room_edit', {'id': room.id}) }}">edit</a>
                </td>
                {% elseif is_granted('ROLE_CUSTOMER') %}
                <td>
                    <a class="btn btn-primary" href="#">Book</a>
                </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted("ROLE_ADMIN")%}
    <a class="btn btn-success" href="{{ path('room_new') }}">Create new</a>
    {% endif %}
{% endblock %}
