{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1>Booking</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ booking.date ? booking.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Check_in_date</th>
                <td>{{ booking.checkInDate ? booking.checkInDate|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>Check_out_date</th>
                <td>{{ booking.checkOutDate ? booking.checkOutDate|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div style="display: flex">
    <a style="margin-right: 10px" class="btn btn-primary" href="{{ path('booking_index') }}">back to list</a>

    <a style="margin-right: 10px" class="btn btn-secondary" href="{{ path('booking_edit', {'id': booking.id}) }}">edit</a>

    {{ include('booking/_delete_form.html.twig') }}
    </div>
{% endblock %}
