{% extends 'base.html.twig' %}

{% block title %}Paymentmethods{% endblock %}

{% block body %}
    <h1>Paymentmethods</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for paymentmethod in paymentmethods %}
            <tr>
                <td>{{ paymentmethod.id }}</td>
                <td>{{ paymentmethod.name }}</td>
                <td>
                    <a style="margin-right: 10px" class="btn btn-primary" href="{{ path('paymentmethod_show', {'id': paymentmethod.id}) }}">show</a>
                    <a class="btn btn-secondary" href="{{ path('paymentmethod_edit', {'id': paymentmethod.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('paymentmethod_new') }}">Create new</a>
{% endblock %}
